{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jjsonng/Australia_Water-Usage_Vega-Lite/main/data/data2.csv"
  },
  "title": "Distributed Water Use by Selected Industries and Households, Australia",
  "width": 1000,
  "height": 600,
  "params": [
    {
      "name": "Industry_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Agriculture, forestry and fishing (GL)",
          "Households (GL)",
          "Manufacturing (GL)",
          "Mining (GL)",
          "Other industries (a) (GL)"
        ],
        "labels": [
          "All",
          "Agriculture, forestry and fishing",
          "Households",
          "Manufacturing",
          "Mining",
          "Other industries"
        ],
        "name": "Select Industry: "
      }
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"labelAngle": 0}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"title": "Water Usage (GL)"}
        },
        "color": {
          "field": "Industry",
          "type": "nominal",
          "scale": {
            "domain": [
              "Other industries (a) (GL)",
              "Mining (GL)",
              "Manufacturing (GL)",
              "Households (GL)",
              "Agriculture, forestry and fishing (GL)"
            ],
            "range": ["#E4645D", "#811B19", "#CD7D2B", "#274B6F", "#5E9ECD"]
          }
        },
        "order": {
          "field": "Industry",
          "type": "nominal",
          "sort": [
            "Other industries (a) (GL)",
            "Mining (GL)",
            "Manufacturing (GL)",
            "Households (GL)",
            "Agriculture, forestry and fishing (GL)"
          ]
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "Industry", "type": "nominal"},
          {"field": "Value", "type": "quantitative", "format": ".2f"}
        ]
      },
      "transform": [
        {
          "fold": [
            "Agriculture, forestry and fishing (GL)",
            "Households (GL)",
            "Manufacturing (GL)",
            "Mining (GL)",
            "Other industries (a) (GL)"
          ],
          "as": ["Industry", "Value"]
        },
        {
          "calculate": "replace(datum.Value, ',', '')",
          "as": "Value"
        },
        {
          "calculate": "toNumber(datum.Value)",
          "as": "Value"
        },
        {
          "filter": "Industry_selection == null || datum.Industry == Industry_selection"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -5
      },
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Value", "type": "quantitative"},
        "text": {"field": "Value", "type": "quantitative", "format": ".2f"}
      },
      "transform": [
        {"filter": "datum.Year == '2020-2021'"},
        {
          "filter": "Industry_selection == null || datum.Industry == Industry_selection"
        }
      ]
    }
  ]
}
