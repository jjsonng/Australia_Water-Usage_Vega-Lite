{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 950,
  "height": 600,
  "title": "Physical Water Usage by State/Territory in Australia (2021-22)",
  "projection": {
    "type": "equirectangular",
    "center": [133, -28],
    "scale": 900
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjsonng/Australia_Water-Usage_Vega-Lite/main/js/ne_1.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jjsonng/Australia_Water-Usage_Vega-Lite/main/data/water_account.csv"
            },
            "key": "Geography Description",
            "fields": ["2021-22", "Total Amount", "Population"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "2021-22",
          "type": "quantitative",
          "title": "Water Use per Capita (ML)",
          "scale": {
            "type": "threshold",
            "domain": [500, 1000, 1500, 3000, 5000],
            "range": ["#f2e7c7", "#e6b67d", "#cc7640", "#bf4030", "#a63630", "#6e1414"]
          },
          "legend": {
            "title": "Water Use per Capita (ML)",
            "orient": "bottom-left",
            "direction": "vertical",
            "offset": 18,
            "labelExpr": "datum.value < 500 ? '0' : datum.value == 500 ? '500' : datum.value == 1000 ? '1000' : datum.value == 1500 ? '1500' : datum.value == 3000 ? '3000' : datum.value == 5000 ? '5000' : datum.value > 5000 ? 'Above 5000' : ''"
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State/Territory"},
          {"field": "Total Amount", "type": "quantitative", "title": "Total Water Usage (ML)", "format": ",.0f"},
          {"field": "Population", "type": "quantitative", "title": "Population", "format": ",.0f"},
          {"field": "2021-22", "type": "quantitative", "title": "Water Use per Capita (ML)", "format": ",.2f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjsonng/Australia_Water-Usage_Vega-Lite/main/js/ne_1.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 0,
        "fontWeight": "bold"
      },
      "encoding": {
        "longitude": {"field": "properties.longitude", "type": "quantitative"},
        "latitude": {"field": "properties.latitude", "type": "quantitative"},
        "text": {"field": "properties.postal"},
        "color": {"value": "black"}
      }
    }
  ],
  "config": {
    "legend": {
      "padding": 10,
      "cornerRadius": 5,
      "fillColor": "#ffffff",
      "strokeColor": "#ccc"
    }
  }
}
